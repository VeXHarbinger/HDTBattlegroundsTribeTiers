<UserControl
    x:Class="HDTBattlegroundsTribeTiers.Controls.RacesDisplayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:HDTBattlegroundsTribeTiers.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hdt="clr-namespace:Hearthstone_Deck_Tracker;assembly=HearthstoneDeckTracker"
    xmlns:hdtc="clr-namespace:Hearthstone_Deck_Tracker.Controls;assembly=HearthstoneDeckTracker"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:themes="clr-namespace:Hearthstone_Deck_Tracker.Utility.Themes;assembly=HearthstoneDeckTracker"
    HorizontalContentAlignment="Stretch"
    VerticalContentAlignment="Center"
    d:DesignHeight="200"
    d:DesignWidth="190"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="HDTBattlegroundsTribeTiers"
    lex:ResxLocalizationProvider.DefaultDictionary="LocalizeTools"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ScrollViewer CanContentScroll="True" Grid.IsSharedSizeScope="True">
            <StackPanel x:Name="RacesViewer" />
        </ScrollViewer>
    </Grid>
</UserControl>
